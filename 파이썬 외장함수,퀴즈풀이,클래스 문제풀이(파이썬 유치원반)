# 파이썬 클래스 연습문제 6-2 011
class 구구단 :
    def print(self,a) :
        for i in range(1,10) :
            print(f'{a}x{i}={a*i}')

m = 구구단()
m.print(3)

# 파이썬 클래스 연습문제 6-3 011
class 사람 :
    def __init__(self):
        print('응애응애')

human = 사람()

# 파이썬 클래스 연습문제 6-3 012
class 사람 :
    def __init__(self,a):
        print(f'{a} 님이 태어났습니다.')

human = 사람('유종훈')
human = 사람('조현호')

# 파이썬 클래스 연습문제 6-3 013
class 사람 :
    def __init__(self,a,연도):
        self.a = a
        self.연도 = 연도
        return print(연도)

human = 사람('유종훈',1986)
human.연도
